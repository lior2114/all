FROM python:alpine3.19

 #爪专转 转拽 注专转 驻注 专转 砖
WORKDIR /zscy-app 
 #爪专转 住 专转 Python 驻注转
RUN python -m venv env
ENV PATH="/zscy-app/env/bin:$PATH"

 # 注转拽 转 拽抓 requirements.txt 拽 (爪专 cache optimization)
COPY requirements.txt /zscy-app/

 # 转拽 转 转 专砖转
RUN pip install -r requirements.txt

 # 注转拽 转 砖专 拽爪 砖 拽 (转拽 转 注 Dockerfile)
#  转 转拽 /zscy-app 转 拽专.
# :  砖  zscy-app.py 砖,  注专 志/zscy-app/zscy-app.py 拽专.
COPY . /zscy-app
ENTRYPOINT ["python", "zscy-app.py"]